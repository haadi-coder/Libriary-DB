// schema.prisma

// ----- Вот эти поля обязательны именно в таком виде -------------------
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

//------ Если возникнет вопрос почему, то могу объяснить лично ----------

// Это уже описание самой БД. Какие таблицы есть с какими атрибутами итд

model Extradition {
  id              String  @id @default(cuid())
  extraditionDate String
  refundDate      String?

  book Book? @relation(fields: [bookId], references: [id])

  readerId String?
  reader   Reader? @relation(fields: [readerId], references: [id])

  debt   Debt?
  bookId String?
}

model Book {
  id               String  @id @default(cuid())
  name             String
  trackingNumber   Int
  publicationCount Int?
  publisher        String?
  publishedYear    Int?
  pagesCount       Int?
  genere           String?

  Extradition Extradition[]
}

model Debt {
  id   String @id @default(cuid())
  date String

  extradition   Extradition? @relation(fields: [extraditionId], references: [id])
  extraditionId String?      @unique
}

model Reader {
  id              String  @id @default(cuid())
  lastName        String
  firstName       String
  patronomic      String?
  addressStreet   String?
  adressCity      String?
  phoneNumber     String?
  registratedDate String?
  status          String
  category        String?

  extraditions Extradition[]
}

model ExtraditionM {
  id              String  @id @default(cuid())
  extraditionDate String
  refundDate      String?

  bookId String? @unique
  book   BookM?  @relation(fields: [bookId], references: [id])

  readerId String?
  reader   ReaderM? @relation(fields: [readerId], references: [id])

  debt DebtM?
}

model BookM {
  id               String  @id @default(cuid())
  name             String
  trackingNumber   Int
  publicationCount Int?
  publisher        String?
  publishedYear    Int?
  pagesCount       Int?
  genere           String?

  extradition ExtraditionM?
}

model DebtM {
  id   String @id @default(cuid())
  date String

  extradition   ExtraditionM? @relation(fields: [extraditionId], references: [id])
  extraditionId String?       @unique
}

model ReaderM {
  id              String  @id @default(cuid())
  lastName        String
  firstName       String
  patronomic      String?
  addressStreet   String?
  adressCity      String?
  phoneNumber     String?
  registratedDate String?
  status          String
  category        String?

  extraditions ExtraditionM[]
}
